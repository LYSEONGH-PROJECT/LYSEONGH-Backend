# ==========================
# Database Configuration
# ==========================
# PostgreSQL connection string
DATABASE_URL="postgresql://postgres:your-db-password@localhost:5432/lyseongh"

# ==========================
# JWT Configuration
# ==========================
# Secret key for signing JWT tokens (make it long & random)
JWT_SECRET=your-secure-secret-key-here

# ==========================
# Email (Nodemailer) Configuration
# ==========================
# Email that will receive contact form notifications
ADMIN_EMAIL=admin@lyseongh.com

# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# ==========================
# Google reCAPTCHA
# ==========================
# Secret key for server-side verification (from Google reCAPTCHA dashboard)
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
